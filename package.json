{
    "name": "javascript-development-environment",
    "version": "1.0.0",
    "description": "JavaScript development environment Pluralsight course by Cory House",
    "scripts": {
        "startMessage": "babel-node buildScripts/startMessage.js",
        "prestart:dev": "npm-run-all --parallel startMessage config",
        "config": "babel-node config.js",
        "open:src": "nodemon --exec babel-node -r dotenv/config buildScripts/srcServer.js",
        "start:dev": "npm-run-all --parallel open:src lint:watch type-check:watch test:watch start-mockapi",
        "start": "npm run start:dev -s",
        "lint": "esw . --ext .js --ext .ts webpack.config.* src buildScripts --color",
        "lint:watch": "npm run lint -- --watch",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "test": "jest --reporter=progress",
        "test:watch": "npm test -- --watch",
        "generate-mock-data": "babel-node buildScripts/generateMockData",
        "prestart-mockapi": "npm run generate-mock-data",
        "start-mockapi": "json-server --watch src/api/db.json --port 3001",
        "localtunnel": "lt --port 3000",
        "share": "npm-run-all --parallel open:src localtunnel",
        "update-dependancy-versions": "ncu -u || npx npm-check-updates -u",
        "clean-dist": "rimraf ./dist && mkdir dist",
        "prebuild": "npm-run-all clean-dist type-check lint test config",
        "build": "cross-env NODE_ENV=production babel-node buildScripts/build.js",
        "postbuild": "babel-node buildScripts/distServer.js"
    },
    "author": "Reuben Vas",
    "license": "",
    "dependencies": {
        "dotenv-webpack": "^1.7.0",
        "whatwg-fetch": "3.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.0",
        "@babel/node": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-typescript": "^7.7.7",
        "@babel/register": "^7.0.0",
        "@types/jest": "^24.0.25",
        "@types/jsdom": "^12.2.4",
        "@types/numeral": "0.0.26",
        "@typescript-eslint/eslint-plugin": "^2.13.0",
        "@typescript-eslint/parser": "^2.13.0",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.0-beta.6",
        "chai": "4.2.0",
        "chalk": "3.0.0",
        "cheerio": "0.22.0",
        "compression": "1.7.4",
        "cross-env": "^6.0.3",
        "css-loader": "3.4.0",
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^1.7.0",
        "eslint-watch": "6.0.1",
        "express": "4.17.1",
        "extract-text-webpack-plugin": "3.0.2",
        "faker": "^4.1.0",
        "html-webpack-plugin": "3.2.0",
        "jest": "^24.9.0",
        "jsdom": "15.2.1",
        "json-schema-faker": "0.4.7",
        "json-server": "0.15.1",
        "localtunnel": "2.0.0",
        "mocha": "6.2.2",
        "nock": "11.7.0",
        "nodemon": "^2.0.2",
        "npm-run-all": "4.1.5",
        "numeral": "2.0.6",
        "open": "7.0.0",
        "rimraf": "3.0.0",
        "style-loader": "1.1.1",
        "surge": "0.21.3",
        "terser-webpack-plugin": "^2.3.1",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.4",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.41.4",
        "webpack-dev-middleware": "3.7.2",
        "webpack-hot-middleware": "2.25.0",
        "webpack-md5-hash": "0.0.6"
    }
}
