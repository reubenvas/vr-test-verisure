{
    "env": {
        "browser": true
    },
    "plugins": [
        "react-hooks",
        "jsx-a11y"
    ],
    "extends": [
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
        "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
        "jsx-a11y/anchor-is-valid": "off"
    }
}
